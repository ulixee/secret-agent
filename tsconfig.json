{
  "extends": "./node_modules/@ulixee/repo-tools/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build"
  },
  "references": [
    {
      "path": "core/injected-scripts/tsconfig.json"
    }
  ],
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.json",
    ".eslintrc.js",
    "core/injected-scripts/global.d.ts"
  ],
  "exclude": [
    "**/tsconfig*.json",
    "node_modules",
    "**/node_modules",
    "build",
    "build-dist",
    "core/injected-scripts",
    "examples/*.js",
    "**/*.d.ts"
  ]
}
